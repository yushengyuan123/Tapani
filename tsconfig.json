{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/main/**/*.ts",
    "src/main/**/*.d.ts",
    "src/main/global.ts",
    "index.d.ts"
  ],
  "exclude": [
    "src/render/*"
  ]
}
