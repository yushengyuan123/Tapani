{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "baseUrl": "./",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/components": ["./src/components"],
      "@/asserts": ["./src/asserts"],
      "@/hooks": ["./src/hooks"],
      "~/share/*": ["../share/*"]
    },
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.vue",
    "./src/**/*.tsx",
    "index.d.ts",
    "types.ts",
    "../share/**/*.d.ts",
    "../share/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
